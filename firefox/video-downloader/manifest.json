{
  "manifest_version": 3,
  "name": "video-downloader-ext",
  "version": "1.0.0",
  "description": "Download videos from web pages while preserving authentication cookies",
  "permissions": [
    "contextMenus",
    "downloads",
    "scripting",
    "activeTab",
    "cookies"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": { "id": "video-downloader@example.com" }
  }
}
